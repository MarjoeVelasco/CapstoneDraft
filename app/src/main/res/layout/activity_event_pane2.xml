<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Event_pane2">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/save2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            app:layout_column="1"
            app:layout_row="10" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date:"
            app:layout_column="0"
            app:layout_row="0"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="181dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Event:"
            app:layout_column="0"
            app:layout_row="2"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="100dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:clickable="true"
            app:layout_column="1"
            app:layout_row="0"
            tools:layout_editor_absoluteX="101dp"
            tools:layout_editor_absoluteY="162dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date:"
            app:layout_column="0"
            app:layout_row="4" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:clickable="true"
            app:layout_column="1"
            app:layout_row="4" />

        <TextView
            android:id="@+id/time"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:clickable="true"
            android:text="00:00:00"
            app:layout_column="1"
            app:layout_row="6" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="5" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="5" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time:"
            app:layout_column="0"
            app:layout_row="6" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_row="7" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:"
            app:layout_column="0"
            app:layout_row="8" />

        <EditText
            android:id="@+id/desc2"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_column="1"
            app:layout_row="8" />

        <TextView
            android:id="@+id/r1"
            android:layout_width="98dp"
            android:layout_height="33dp"
            android:background="@android:drawable/editbox_background"
            android:clickable="true"
            app:layout_column="1"
            app:layout_row="2"
            tools:layout_editor_absoluteX="143dp"
            tools:layout_editor_absoluteY="383dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="9" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            app:layout_column="1"
            app:layout_row="9" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_row="10" />
    </android.support.v7.widget.GridLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:padding="2dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/landPrep"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/land_icon"
            style="?android:borderlessButtonStyle"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/crop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/crop_icon"
            style="?android:borderlessButtonStyle"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/care"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/care_icon"
            style="?android:borderlessButtonStyle"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/pest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/pest_icon"
            style="?android:borderlessButtonStyle"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/harvest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/harvest_icon"
            style="?android:borderlessButtonStyle"
            android:scaleType="fitXY" />

        <ImageButton
            android:id="@+id/others"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/others_icon"
            android:scaleType="fitXY" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>